<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- 步数视图 -->
    <com.example.healthyolder.view.SportStepView
        android:id="@+id/sportStepCount"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 步数信息 -->
    <TextView
        android:id="@+id/sportStepCountInfo"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_btn_theme_circle"
        android:gravity="center"
        android:padding="12dp"
        android:text="抑郁测试分"
        android:textColor="@color/colorLight"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sportStepCount" />

    <!-- 抑郁自测 -->
    <TextView
        android:id="@+id/tv_test"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_btn_purple_circle"
        android:gravity="center"
        android:padding="12dp"
        android:text="抑郁自测"
        android:textColor="@color/colorLight"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sportStepCountInfo" />

    <!-- 抑郁了怎么办 -->
    <TextView
        android:id="@+id/tv_test1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_btn_pink_circle"
        android:gravity="center"
        android:padding="12dp"
        android:text="抑郁了,\n怎么办"
        android:textColor="@color/colorLight"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_test" />

    <!-- 再次自测 -->
    <TextView
        android:id="@+id/tv_test2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:text="抑郁自测"
        android:textSize="25sp"
        android:textColor="@color/colorLight"
        android:gravity="center"
        android:background="@drawable/bg_btn_green_circle"
        app:layout_constraintTop_toBottomOf="@id/tv_test1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
