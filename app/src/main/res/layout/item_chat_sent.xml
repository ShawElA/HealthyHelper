<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toStartOf="@id/iv_avatar"
        android:layout_toLeftOf="@id/iv_avatar"
        android:background="@drawable/chat_bubble_sent"
        android:maxWidth="260dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="这是用户发送的消息"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/bg_btn_green_circle"
        android:padding="8dp"
        android:src="@drawable/ic_user_avatar"
        android:contentDescription="用户头像" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message"
        android:layout_alignEnd="@id/tv_message"
        android:layout_alignRight="@id/tv_message"
        android:layout_marginTop="4dp"
        android:text="10:32"
        android:textColor="@color/gray1"
        android:textSize="12sp" />

</RelativeLayout> 